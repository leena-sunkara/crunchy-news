<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.techcrunch.crunchynews">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/playo_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/playo_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.CrunchyNews"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".view.WebViewActivity"
            android:exported="false" />
        <activity
            android:name=".view.NewsActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>